# OpenAI Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Optional: Override default model names
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_LLM_MODEL=gpt-4o-mini
OPENAI_VISION_MODEL=gpt-4o-mini

# Storage Configuration
WORKING_DIR=./rag_storage
UPLOAD_DIR=./uploads

# Parser Configuration
PARSER=docling
PARSE_METHOD=auto

# Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536
LLM_MODEL=gpt-4o-mini
VISION_MODEL=gpt-4o-mini

# LightRAG Configuration
LIGHTRAG_ENABLED=true
LIGHTRAG_WORKING_DIR=
LIGHTRAG_KV_STORAGE=JsonKVStorage
LIGHTRAG_VECTOR_STORAGE=NanoVectorDBStorage
LIGHTRAG_GRAPH_STORAGE=NetworkXStorage
LIGHTRAG_DOC_STATUS_STORAGE=JsonDocStatusStorage

# Processing Configuration
MAX_FILE_SIZE_MB=100
MAX_WORKERS=4
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Content Processing Options
ENABLE_IMAGES=true
ENABLE_TABLES=true
ENABLE_EQUATIONS=true

# Database Configuration (Optional - defaults to local storage)
# VECTOR_DB=local://vectors
# GRAPH_DB=neo4j://localhost:7687
# GRAPH_DB_USER=
# GRAPH_DB_PASSWORD=
# CACHE_DB=redis://localhost:6379

# AWS Configuration (Optional - for AWS Bedrock)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# BEDROCK_MODEL_ID=anthropic.claude-v2
